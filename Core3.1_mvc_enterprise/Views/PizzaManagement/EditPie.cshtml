@model PizzaEditViewModel

<h2>Edit pizza</h2>

<form asp-controller="PizzaManagement" asp-action="EditPizza" method="post" class="form-horizontal" role="form">
    <h4>Update the pizza details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Pizza.PizzaId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.PizzaId" class="form-control" />@*readonly="readonly"*@
            <span asp-validation-for="Pizza.PizzaId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.Name" class="form-control" />
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.ShortDescription" class="form-control" />
            <span asp-validation-for="Pizza.ShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.LongDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.LongDescription" class="form-control" />
            <span asp-validation-for="Pizza.LongDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.Price" class="form-control" />
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.ImageThumbnailUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.ImageThumbnailUrl" class="form-control" />
            <span asp-validation-for="Pizza.ImageThumbnailUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.ImageUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.ImageUrl" class="form-control" />
            <span asp-validation-for="Pizza.ImageUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.InStock" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.InStock" class="form-control" />
            <span asp-validation-for="Pizza.InStock" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.IsPizzaOfTheWeek" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pizza.IsPizzaOfTheWeek" class="form-control" />
            <span asp-validation-for="Pizza.IsPizzaOfTheWeek" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Pizza.SugarLevel" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Pizza.SugarLevel" class="form-control"
                    asp-items="@new SelectList(Enum.GetNames(typeof(SugarLevel)))"></select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Categories" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="CategoryId" class="form-control"
                    asp-items="Model.Categories"></select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Update pizza" />
        </div>
    </div>
</form>
