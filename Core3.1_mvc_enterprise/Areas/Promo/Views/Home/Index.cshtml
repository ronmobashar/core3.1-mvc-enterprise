@using PandasPizzaShop.Models
@model IEnumerable<Pizza>

@{
    Layout = "_Layout";
}


@foreach (var pizza in @Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pizza.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@pizza.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.PizzaId" asp-area="">@pizza.Name</a>
                </h3>
                <p>@pizza.ShortDescription</p>
            </div>
            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" 
                       asp-route-pizzaId="@pizza.PizzaId">Add to cart</a>
                </p>
            </div>
        </div>
    </div>
}